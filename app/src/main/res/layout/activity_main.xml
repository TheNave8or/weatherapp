<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- background now -->
    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <!-- weather image now -->
    <ImageView
        android:id="@+id/nowImageView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- tempnow -->
    <TextView
        android:id="@+id/tempNowTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--Â°C"
        android:textSize="48sp"
        android:textColor="@android:color/white"
        android:layout_below="@id/nowImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <!-- feelslike now -->
    <TextView
        android:id="@+id/feelsLikeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feels like: --Â°C"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_below="@id/tempNowTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp" />

    <!-- weathernow description -->
    <TextView
        android:id="@+id/currentWeatherTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading..."
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:layout_below="@id/feelsLikeTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <!-- sunset -->
    <TextView
        android:id="@+id/sunsetTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunset at: --:--"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_below="@id/currentWeatherTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp" />

    <!-- weather today -->
    <LinearLayout
        android:id="@+id/todayWeatherLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/sunsetTextView"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/todayImageView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/todayMaxTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ˆ --Â°C"
                android:textSize="18sp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/todayMinTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“‰ --Â°C"
                android:textSize="18sp"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

    <!-- tomorrow weather -->
    <LinearLayout
        android:id="@+id/tomorrowWeatherLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/todayWeatherLayout"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/tomorrowImageView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tomorrowMaxTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ˆ --Â°C"
                android:textSize="18sp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tomorrowMinTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“‰ --Â°C"
                android:textSize="18sp"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/favoritesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favorites"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="650dp"
        />

    <Button
        android:id="@+id/refreshButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh"
        android:onClick="onRefreshClicked"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="700dp"
        />

    <Button
        android:id="@+id/changelocationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Location"
        android:onClick="onChangeLocationClicked"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="700dp"
        />
</RelativeLayout>
